<!-- Modal -->
<div class="modal fade" id="newLoginForm" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content form-elegant">
            <!--Header-->
            <div class="modal-header text-center">
                <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="loginModalLabel"><strong>Sign in</strong></h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!--Body-->
            <form id="account" method="post">
                <div class="modal-body mx-4">
                    <!--Body-->
                    <div class="md-form mb-5">
                        <input type="email" id="Form-email1" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="Form-email1">UserName</label>
                    </div>

                    <div class="md-form pb-3">
                        <input type="password" id="Form-pass1" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="Form-pass1">Password</label>
                        <p class="font-small blue-text d-flex justify-content-end">
                            Forgot <a href="#" class="blue-text ml-1">
                                Password?
                            </a>
                        </p>
                        <div class="form-group mt-4">
                            <input class="form-check-input" type="checkbox" data-val="true" data-val-required="The Remember me? field is required." id="Input_RememberMe" name="Input.RememberMe" value="true" />
                            <label for="Input_RememberMe" class="red-text form-check-label">
                                Remember me?
                            </label>

                        </div>
                    </div>
                    <div class="row d-flex align-items-center mb-4 pt-4">
                        <div class="text-center  col-md-12">
                            <button type="submit" class="btn blue-gradient btn-block btn-rounded z-depth-1a">Sign in</button>
                        </div>
                    </div>

                </div>
            </form>
            <!--Footer-->
            <div class="modal-footer mx-5 pt-3 mb-1">
                <p class="font-small grey-text d-flex justify-content-end">
                    Not a member? <a asp-area="Identity" asp-page="/Account/Register" class="blue-text ml-1">
                        Sign Up
                    </a>
                </p>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- Modal -->
