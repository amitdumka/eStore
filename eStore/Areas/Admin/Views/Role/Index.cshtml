@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>



@{ ViewData["Title"] = "Role"; }

<h1>List of Roles</h1>
<a asp-action="Create" class="btn btn-outline-deep-orange btn-sm">Create</a>
<a asp-action="AssignRole" class="btn btn-outline-deep-purple btn-sm">Assign Role</a>
<table class="table table-striped table-bordered table-sm">
    <thead class="table-danger">
        <tr>
            @*<td>Id</td>*@
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
<tr>
    @*<td>@role.Id</td>*@
    <td>@role.Name</td>
    <td>
        <a class="btn btn-outline-info btn-sm" id="detail" asp-action="Details" asp-route-id="@role.Id">Details</a>
    </td>
</tr>}
    </tbody>
</table>