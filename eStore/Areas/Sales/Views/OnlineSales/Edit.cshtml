@model eStore.Shared.Models.Sales.OnlineSale

@{
    ViewData["Title"] = "Edit";
}



<h4>OnlineSale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OnlineSaleId" />
            <div class="form-group">
                <label asp-for="SaleDate" class="control-label"></label>
                <input asp-for="SaleDate" class="form-control" />
                <span asp-validation-for="SaleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvNo" class="control-label"></label>
                <input asp-for="InvNo" class="form-control" />
                <span asp-validation-for="InvNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoyagerInvoiceNo" class="control-label"></label>
                <input asp-for="VoyagerInvoiceNo" class="form-control" />
                <span asp-validation-for="VoyagerInvoiceNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoygerDate" class="control-label"></label>
                <input asp-for="VoygerDate" class="form-control" />
                <span asp-validation-for="VoygerDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoyagerAmount" class="control-label"></label>
                <input asp-for="VoyagerAmount" class="form-control" />
                <span asp-validation-for="VoyagerAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingMode" class="control-label"></label>
                <input asp-for="ShippingMode" class="form-control" />
                <span asp-validation-for="ShippingMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorFee" class="control-label"></label>
                <input asp-for="VendorFee" class="form-control" />
                <span asp-validation-for="VendorFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfitValue" class="control-label"></label>
                <input asp-for="ProfitValue" class="form-control" />
                <span asp-validation-for="ProfitValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnlineVendorId" class="control-label"></label>
                <select asp-for="OnlineVendorId" class="form-control" asp-items="ViewBag.OnlineVendorId"></select>
                <span asp-validation-for="OnlineVendorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
