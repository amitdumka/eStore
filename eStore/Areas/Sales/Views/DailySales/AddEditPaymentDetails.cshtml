@model eStore.Shared.Models.Sales.EDCTranscation
{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddEditPaymentDetails" asp-route-InvoiceNumber="@Model.InvoiceNumber" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceNumber" />
            <input type="hidden" asp-for="StoreId" />
            <input type="hidden" asp-for="EDCTranscationId" />
            <label class="text-danger text-monospace font-italic text-capitalize">InvoiceNo: @Model.InvoiceNumber</label>
            @*<input type="hidden" asp-for="OnDateDate" />*@
            <div class="form-group">
                <label asp-for="OnDate" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-calendar-day text-primary"></i></div>
                    </div>
                    <input asp-for="OnDate" class="form-control" />
                </div>
                <span asp-validation-for="OnDate" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EDCId" class="control-label"></label>
                        <div class="input-group-prepend">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fab fa-cc-amex  text-success"></i></div>
                            </div>
                            <select asp-for="EDCId" class="form-control" asp-items="ViewBag.EDCId"></select>
                        </div>
                        <span asp-validation-for="EDCId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CardEndingNumber" class="control-label"></label>

                        <div class="input-group-prepend">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-credit-card  text-success"></i>
                                </div>
                            </div>
                            <input asp-for="CardEndingNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="CardEndingNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CardTypes" class="control-label"></label>

                        <div class="input-group-prepend">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fab fa-cc-visa text-success"></i>
                                </div>
                            </div>
                            <select asp-for="CardTypes" class="form-control" asp-items="Html.GetEnumSelectList<CardMode>()"></select>
                        </div>
                        <span asp-validation-for="CardTypes" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-rupee-sign text-danger"></i>
                                </div>
                            </div>
                            <input asp-for="Amount" class="form-control" />
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    @if (Model.EDCTranscationId > 0)
                    {
                        <input type="submit" value="Update" class="btn btn-outline-warning btn-sm waves-effect" />
                        @*<input type="submit" value="Delete" class="btn btn-outline-danger btn-sm d-inline btn-block" onclick="return jQueryAjaxDeleteFunction(@Model.EDCTranscationId)"  />*@
                    }
                    else
                    {
                        <input type="submit" value="Add" class="btn btn-outline-primary btn-sm waves-effect" />}
                </div>
            </div>
        </form>

    </div>
    @if (Model.EDCTranscationId > 0)
    {
        <div class="col-md-12 text-center">
            <form asp-action="DeletePayment" asp-route-id="@Model.EDCTranscationId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                <label class="text-danger font-italic font-weight-bold">Are you sure to Delete payment details? </label>   <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
            </form>

        </div>
    }
</div>


