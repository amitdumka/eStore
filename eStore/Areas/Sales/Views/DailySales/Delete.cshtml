<div>
    <h4>DailySale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PayMode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayMode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CashAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CashAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salesman)
        </dt>
