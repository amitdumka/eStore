@model IEnumerable<eStore.Shared.Models.Accounts.Payment>

@{
    ViewData["Title"] = "Payment";
    var host = "https://localhost:44335/";
    var uri = host + "api/Payments";
    var activityName = "Payment";
}


<table class="table" id="dtPayment">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PartyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentSlipNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayMode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LedgerEnteryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCash)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Party)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PartyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentSlipNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayMode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromAccount.BankAccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LedgerEnteryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCash)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Party.PartyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.StoreId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_OnlyModalPopUp" />
@section Scripts{
    <script src="~/js/curdjs.js"></script>
    <script>
        cardTableInit("dtPayment", "Payment", "Payments");
         function deleteM(id) {
             deleteModal('@activityName', '@uri', id);
            // alert(id);
             return false;
        }
    </script>
}