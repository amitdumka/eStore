@model eStore.Shared.Models.Accounts.Expenses.EBillPayment

@{
    ViewData["Title"] = "Create";
}

<h4>EBill Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EletricityBillId" class="control-label"></label>
                <select asp-for="EletricityBillId" class="form-control" asp-items="ViewBag.EletricityBillId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mode" class="control-label"></label>
                <select asp-for="Mode" class="form-control" asp-items="@Html.GetEnumSelectList<PaymentMode>()"></select>
                <span asp-validation-for="Mode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDetails" class="control-label"></label>
                <input asp-for="PaymentDetails" class="form-control" />
                <span asp-validation-for="PaymentDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-check mt-4 mb-4">
                <input class="form-check-input" asp-for="IsPartialPayment" type="checkbox" />
                <label class="form-check-label" asp-for="IsPartialPayment"></label>
            </div>
            <<div class="form-check mt-4 mb-4">
                <input class="form-check-input" asp-for="IsBillCleared" type="checkbox" />
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.IsBillCleared)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StoreId" class="control-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
             
                <input asp-for="EntryStatus" value="0" type="hidden"/>
             
            <input class="form-check-input" asp-for="IsReadOnly" value="false" type="hidden"/> 

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

</div>

