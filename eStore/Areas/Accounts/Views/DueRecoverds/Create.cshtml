@model eStore.Shared.Models.Sales.DueRecoverd

@{
    ViewData["Title"] = "Create";
}



<h4>Due Recoverd</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaidDate" class="control-label"></label>
                <input asp-for="PaidDate" class="form-control" />
                <span asp-validation-for="PaidDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuesListId" class="control-label"></label>
                <select asp-for="DuesListId" class="form-control" asp-items="ViewBag.DuesListId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AmountPaid" class="control-label"></label>
                <input asp-for="AmountPaid" class="form-control" />
                <span asp-validation-for="AmountPaid" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" asp-for="IsPartialPayment" type="checkbox" />
                <label class="form-check-label" asp-for="IsPartialPayment">
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Modes" class="control-label"></label>
                <select asp-for="Modes" class="form-control" asp-items="Html.GetEnumSelectList< PaymentMode>()"></select>
                <span asp-validation-for="Modes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="StoreId" class="form-control" type="hidden" value="@ViewBag.StoreId" />
                <input asp-for="UserId" class="form-control" type="hidden" value="@User.Identity.Name" />
                <span asp-validation-for="StoreId" class="text-danger"></span>
                <span asp-validation-for="UserId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
