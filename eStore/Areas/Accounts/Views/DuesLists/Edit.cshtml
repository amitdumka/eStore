@model eStore.Shared.Models.Sales.DuesList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DuesList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DuesListId" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRecovered" /> @Html.DisplayNameFor(model => model.IsRecovered)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RecoveryDate" class="control-label"></label>
                <input asp-for="RecoveryDate" class="form-control" />
                <span asp-validation-for="RecoveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DailySaleId" class="control-label"></label>
                <select asp-for="DailySaleId" class="form-control" asp-items="ViewBag.DailySaleId"></select>
                <span asp-validation-for="DailySaleId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPartialRecovery" /> @Html.DisplayNameFor(model => model.IsPartialRecovery)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StoreId" class="control-label"></label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
