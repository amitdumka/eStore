@model eStore.Shared.Models.Accounts.Receipt

@{
    ViewData["Title"] = "Create";
}
 
<h4>Receipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartyName" class="control-label"></label>
                <input asp-for="PartyName" class="form-control" />
                <span asp-validation-for="PartyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecieptSlipNo" class="control-label"></label>
                <input asp-for="RecieptSlipNo" class="form-control" />
                <span asp-validation-for="RecieptSlipNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnDate" class="control-label"></label>
                <input asp-for="OnDate" class="form-control" />
                <span asp-validation-for="OnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayMode" class="control-label"></label>
                <select asp-for="PayMode" class="form-control" asp-items="@Html.GetEnumSelectList<PaymentMode>()"></select>
                <span asp-validation-for="PayMode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountId" class="control-label"></label>
                <select asp-for="BankAccountId" class="form-control" asp-items="ViewBag.BankAccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDetails" class="control-label"></label>
                <input asp-for="PaymentDetails" class="form-control" />
                <span asp-validation-for="PaymentDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartyId" class="control-label"></label>
                <select asp-for="PartyId" class="form-control" asp-items="ViewBag.PartyId"></select>
            </div>
            <input type="hidden" asp-for="LedgerEnteryId" class="form-control" />
            <div class="form-check">

                <input class="form-check-input" asp-for="IsCash" />
                <label class="form-check-label" asp-for="IsCash"></label>
            </div>
            <div class="form-check">
                <input class="form-check-input" asp-for="IsDyn" type="checkbox" />
                <label class="form-check-label text-primary" asp-for="IsDyn"></label>
                <span asp-validation-for="IsDyn" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="StoreId" class="form-control" type="hidden" value="@ViewBag.StoreId" />
                <input asp-for="UserId" class="form-control" type="hidden" value="@User.Identity.Name" />
                <input asp-for="EntryStatus" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="EntryStatus" class="text-danger"></span>
                <span asp-validation-for="StoreId" class="text-danger"></span>
                <span asp-validation-for="UserId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

